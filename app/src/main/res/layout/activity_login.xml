<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.along002.testingfinal.LoginAndSignUp.LoginCreateAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ViewSwitcher
            android:id="@+id/viewSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inAnimation="@anim/fade_in"
            android:outAnimation="@anim/fade_out">

            <ImageView
                android:tint="#2F000000"
                android:id="@+id/firstImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image5"/>

            <ImageView
                android:tint="#2F000000"
                android:id="@+id/secondImageView"
                android:scaleType="centerCrop"
                android:src="@drawable/image6"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ViewSwitcher>

        <include layout = "@layout/layout_center_viewpager"/>

        <RelativeLayout
            android:id="@+id/rellayoutMid"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>

        <RelativeLayout
            android:layout_above="@+id/rellayoutMid"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:alpha=".6"
                android:padding="55dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/flashcard_launcher"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
